#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "[pre-commit] Lint staged files" && npx lint-staged || exit 1

echo "[pre-commit] Type checking (tsc --noEmit)" && npm run typecheck || exit 1

echo "[pre-commit] Running unit tests (vitest)" && npm test || exit 1

echo "[pre-commit] Building project" && npm run build || exit 1

echo "[pre-commit] All checks passed"
